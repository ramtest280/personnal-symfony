{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
            <section class="h-90 gradient-form">
            <div class="py-5 h-90">
                <div class="row d-flex justify-content-center align-items-center h-90">
                <div class="col">
                    <div class="card rounded-3">
                    <div class="row g-0">
                        <div class="col-3"></div>
                        <div class="col-md-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                        style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are The Projet Team</h4>
                                </div>

                               {{ form_start(registrationForm) }}  
                            <div data-mdb-input-init class="form-outline mb-4">
                                {{ form_row(registrationForm.email) }}
                            </div>



                            <div data-mdb-input-init class="form-outline mb-4">
                                {{ form_row(registrationForm.nom) }}
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Mot de passe'
                                }) }}
                            </div>

                            
                            <div data-mdb-input-init class="form-outline mb-4">
                                {{ form_row(registrationForm.avatar) }}
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                {{ form_row(registrationForm.cv) }}
                            </div>
                                
                            <div class="text-center pt-1 mb-5 pb-1">
                                <button 
                                    data-mdb-button-init data-mdb-ripple-init 
                                    class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 mt-3" 
                                    type="submit">
                                    S'inscrire
                                </button>
                            </div>
                                {{ form_end(registrationForm) }}
                        </form>

                    </div>
                    <div class="col-3"></div>
                </div>

                        
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </section>
    </div>


{% endblock %}
