{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container">
            <section class="h-90 gradient-form">
            <div class="py-5 h-90">
                <div class="row d-flex justify-content-center align-items-center h-90">
                <div class="col-xl-10">
                    <div class="card rounded-3">
                    <div class="row g-0">
                        <div class="col-3"></div>
                        <div class="col-md-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                        style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are The Projet Team</h4>
                                </div>

                            <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">Erreur du mot de passe ou d'email</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                                </div>
                            {% endif %}

                            <div data-mdb-input-init class="form-outline mb-4">
                                <input 
                                    type="email" 
                                    name="email" 
                                    id="inputEmail" 
                                    class="form-control"
                                    placeholder="Phone number or email address" 
                                    autocomplete="email" 
                                    required autofocus />
                            </div>

                            <div data-mdb-input-init class="form-outline">
                                <input 
                                    type="password" 
                                    name="password" 
                                    id="inputPassword" 
                                    class="form-control" 
                                    placeholder="Mot de passe ..."
                                    autocomplete="current-password" 
                                    required />
                            </div>

                            <input 
                                type="hidden" 
                                name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}">
                                
                            <div class="text-center pt-1 mb-5 pb-1">
                                <button 
                                    data-mdb-button-init data-mdb-ripple-init 
                                    class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 mt-3" 
                                    type="submit">
                                    Login
                                </button>
                            </div>

                            <div class="d-flex align-items-center justify-content-center pb-4">
                                <p class="mb-0 me-2">Don't have an account?</p><br>
                                {# <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-danger">Create new</button> #}
                                <a href="{{ path ('app_register')}}" class="btn btn-outline-danger">Inscription</a>
                            </div>

                        </form>

                    </div>
                    <div class="col-3"></div>
                </div>

                        
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </section>
    </div>

    
    
{% endblock %}
